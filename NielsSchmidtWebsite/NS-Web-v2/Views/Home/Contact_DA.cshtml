@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well page-top-header">Kontakt</div>

@model NS_Web_v2.Models.EmailFormModel
@{
    ViewBag.Title = "Kontakt";
}
<h2>@ViewBag.Title.</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-sm-7 col-md-7">
            <h4>Venligst udfyld felterne for at komme i kontakt med mig.</h4>
            <hr />
        </div>
        <div class="hidden-xs">
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Dit navn</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                <div style="color: red;">@Html.ValidationMessageFor(m => m.FromName)</div>
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Din email</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                <div style="color: red;">@Html.ValidationMessageFor(m => m.FromEmail)</div>
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Type af interesse</div>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Type, new SelectList(new List<Object>
                {
                    new {value = "personal", text = "Personlig"},
                    new {value = "business", text = "Forretning"},
                    new {value = "hiring", text = "Jeg vil ansætte dig!"},
                    new {value = "other", text = "Andet"},
                }, "value", "text", "personal"))
                <div style="color: red;">@Html.ValidationMessageFor(m => m.Type)</div>
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Besked</div>
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                <div style="color: red;">@Html.ValidationMessageFor(m => m.Message)</div>
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="sendBtn" type="submit" class="btn btn-info" onclick="SendPress();" value="Send" />
            </div>
        </div>
    }
</div>

<script>
    function SendPress() {
        $("#sendBtn").val("Please wait...");
        $("#sendBtn").attr("class", "btn btn-warning disabled");
    }
</script>
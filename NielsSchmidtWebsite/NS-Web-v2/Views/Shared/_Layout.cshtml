            <a href="https://novakittysoft.dk" target="_blank">NovaKitty Software</a>
        </div>
        <br/>
    </div>

    <div class="row">
        <div align="left" class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
            <div class="body-content">
                @RenderBody()
            </div>
        </div>
        <div align="center" class="hidden-xs sidebar col-sm-4 col-md-4 hidden-lg">
            <h2>Niels Schmidt</h2>
            <img src="/Content/Images/Niels_Small_Round.png" class="form-control-static" height="200"/>
            @if (Session["language"].ToString() == "DA")
            {
                <h3 id="lang_sidebar_FindMeOn">Find mig på</h3>
            }
            else
            {
                <h3 id="lang_sidebar_FindMeOn">Find me on</h3>
            }
            <a href="https://github.com/itniels" target="_blank">Github</a> <br/>
            <a href="https://www.linkedin.com/in/niels-schmidt-75054b44" target="_blank">LinkedIn</a> <br/>
            <a href="https://itniels.dk" target="_blank">ITNiels - Tech Blog</a> <br/>
            <a href="https://novakittysoft.dk" target="_blank">NovaKitty Software</a>
        </div>
        <div align="center" class="hidden-xs sidebar hidden-sm hidden-md col-lg-4">
            <h2>Niels Schmidt</h2>
            <img src="/Content/Images/Niels_Small_Round.png" class="form-control-static" height="300" />
            @if (Session["language"].ToString() == "DA")
            {
                <h3 id="lang_sidebar_FindMeOn">Find mig på</h3>
            }
            else
            {
                <h3 id="lang_sidebar_FindMeOn">Find me on</h3>
            }
            <a href="https://github.com/itniels" target="_blank">Github</a> <br />
            <a href="https://www.linkedin.com/in/niels-schmidt-75054b44" target="_blank">LinkedIn</a> <br />
            <a href="https://itniels.dk" target="_blank">ITNiels - Tech Blog</a> <br />
            <a href="https://novakittysoft.dk" target="_blank">NovaKitty Software</a>
        </div>
    </div>
</div>

@if (Session["language"].ToString() == "DA")
{
    <div class="footer navbar-fixed-bottom navbar-inverse">
        <div id="lang_footer_long" align="center" class="text-footer hidden-xs">Designet, skrevet og programeret af Niels Schmidt - &copy; Copyright 2016.</div>
        <div id="lang_footer_short" align="center" class="text-footer hidden-sm hidden-md hidden-lg">Lavet af Niels Schmidt - &copy; Copyright 2016.</div>
    </div>
}
else
{
    <div class="footer navbar-fixed-bottom navbar-inverse">
        <div id="lang_footer_long" align="center" class="text-footer hidden-xs">Created, written and programmed by Niels Schmidt - &copy; Copyright 2016.</div>
        <div id="lang_footer_short" align="center" class="text-footer hidden-sm hidden-md hidden-lg">Created by Niels Schmidt - &copy; Copyright 2016.</div>
    </div>
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</body>
</html>

<script>
    // Changes the site language and refreshes the current page.
    function ChangeLanguage(lang) {
        $.ajax({
            type: "POST",
            url: "ChangeLanguage",
            data: { language: lang }
        }).done(function () {
            location.reload();
        });
    }
</script>
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NielsSchmidt.dk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/unobjq")
</head>
<body>



<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="hidden-sm">
                @Html.ActionLink("Niels Schmidt", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <div class="hidden-xs hidden-md hidden-lg">
                @Html.ActionLink("NS", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (Session["language"].ToString() == "DA")
                {
                    <li>@Html.ActionLink("Introduktion", "Index", "Home")</li>
                    <li>@Html.ActionLink("Færdigheder", "Skills", "Home")</li>
                    <li>@Html.ActionLink("Portefølje", "Portfolio", "Home")</li>
                    <li>@Html.ActionLink("Uddannelse", "Education", "Home")</li>
                    <li>@Html.ActionLink("Arbejde", "Work", "Home")</li>
                    <li>@Html.ActionLink("Kontakt Mig", "Contact", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Introduction", "Index", "Home")</li>
                    <li>@Html.ActionLink("Skills", "Skills", "Home")</li>
                    <li>@Html.ActionLink("Portfolio", "Portfolio", "Home")</li>
                    <li>@Html.ActionLink("Education", "Education", "Home")</li>
                    <li>@Html.ActionLink("Work", "Work", "Home")</li>
                    <li>@Html.ActionLink("Contact Me", "Contact", "Home")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden-xs hidden-md hidden-lg"><a href="#" onclick="ChangeLanguage('EN');"><img src="/Content/Images/flag_round_usa.png" height="25"/></a></li>
                <li class="hidden-xs hidden-md hidden-lg"><a href="#" onclick="ChangeLanguage('DA');"><img src="/Content/Images/flag_round_denmark.png" height="25"/></a></li>

                <li class="hidden-sm"><a href="#" onclick="ChangeLanguage('EN');"><img src="/Content/Images/flag_round_usa.png" height="25"/> English</a></li>
                <li class="hidden-sm"><a href="#" onclick="ChangeLanguage('DA');"><img src="/Content/Images/flag_round_denmark.png" height="25"/> Dansk</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="container">

    <div class="hidden-sm hidden-md hidden-lg">
        <div align="center" class="sidebar">
            <div class="name-text">
                Niels Schmidt <img src="/Content/Images/Niels_Small_Round.png" class="form-control-static" height="140"/>
            </div>
            @if (Session["language"].ToString() == "DA")
            {
                <h3 id="lang_sidebar_FindMeOn">Find mig på</h3>
            }
            else
            {
                <h3 id="lang_sidebar_FindMeOn">Find me on</h3>
            }
            
            <a href="https://github.com/itniels" target="_blank">Github</a> |
            <a href="https://www.linkedin.com/in/niels-schmidt-75054b44" target="_blank">LinkedIn</a> |

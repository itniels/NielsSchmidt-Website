@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well page-top-header">Contact</div>

@model NS_Web_v2.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-sm-7 col-md-7">
            <h4>Please fill out the form to get in touch with me.</h4>
            <hr/>
        </div>
        <div class="hidden-xs">
            <br />
            <br />
            <br />
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Your name</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromName)
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Your email</div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FromEmail)
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Your type of interest</div>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Type, new SelectList(new List<Object>
                {
                    new {value = "personal", text = "Personal"},
                    new {value = "business", text = "Business"},
                    new {value = "hiring", text = "I want to hire you!"},
                    new {value = "other", text = "Other"},
                }, "value", "text", "personal"))
                @Html.ValidationMessageFor(m => m.Type)
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">Message</div>
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Message)
            </div>
        </div>
        <div class="hidden-xs hidden-sm">
            <br />
            <br />
            <br />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-info" value="Send" />
            </div>
        </div>

    }
</div>